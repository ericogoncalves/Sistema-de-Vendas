@model IEnumerable<SalesWebMvc.Models.Venda>

@{
    ViewData["Title"] = "Vendas";
}

<div class="container body-content">
    <div class="page-header">
        <h2 class="text-center">Vendas</h2>
    </div>
    <p>
        <a asp-action="Create" class="btn btn-primary">Nova Venda</a>
    </p>

    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Valor</th>
                            <th>Data</th>
                            <th>Produto</th>
                            <th>Vendedor</th>
                            <th>Departamento</th>
                            <th>Status</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Valor.ToString("C", new System.Globalization.CultureInfo("pt-BR"))</td>
                                    <td>@item.Data.ToString("dd/MM/yyyy")</td>
                                    <td>@item.Produto.Nome</td>
                                    <td>@item.Vendedor.Name</td>
                                    <td>@item.Departamento.Name</td>
                                    <td>@item.Status.ToString()</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.VendaId" class="btn btn-info btn-sm">Detalhes</a>
                                        <a asp-action="Edit" asp-route-id="@item.VendaId" class="btn btn-warning btn-sm">Editar</a>
                                        <a asp-action="Delete" asp-route-id="@item.VendaId" class="btn btn-danger btn-sm">Excluir</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center">Nenhuma venda encontrada.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
