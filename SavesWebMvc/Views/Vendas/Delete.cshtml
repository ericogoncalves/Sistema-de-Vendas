@model SalesWebMvc.Models.Venda

@{
    ViewData["Title"] = "Excluir Venda";
}
<div class="body-content">
<h2>Excluir Venda</h2>

<h4>Venda</h4>
<hr />
<div>
    <h4>Venda</h4>
    <dl class="dl-horizontal">
        <dt>Valor</dt>
        <dd>@Model.Valor</dd>
        <dt>Data</dt>
        <dd>@Model.Data.ToShortDateString()</dd>
        <dt>Produto</dt>
        <dd>@Model.Produto.Nome</dd>
        <dt>Vendedor</dt>
        <dd>@Model.Vendedor.Name</dd>
        <dt>Departamento</dt>
        <dd>@Model.Departamento.Name</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="VendaId" />
        <div class="form-group">
            <input type="submit" value="Excluir" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-primary">Voltar</a>
        </div>
    </form>
</div>
</div>
