@model SalesWebMvc.Models.Produto

@{
    ViewData["Title"] = "Detalhes do Produto";
}

<div class="body-content">
<h2>Detalhes do Produto</h2>

<h4>Produto</h4>
<hr />
<dl class="dl-horizontal">
    <dt>Nome</dt>
    <dd>@Model.Nome</dd>
    <dt>Preço</dt>
    <dd>@Model.Preço</dd>
    <dt>Departamento</dt>
    <dd>@Model.Departamento.Name</dd>
</dl>
<a asp-action="Edit" asp-route-id="@Model.ProdutoId" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-primary">Voltar</a>
</div>
