@model SalesWebMvc.Models.Produto

@{
    ViewData["Title"] = "Criar Produto";
}

<div class="body-content">
<h2>Criar Produto</h2>

<h4>Produto</h4>
<hr />
<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Preço" class="control-label"></label>
        <input asp-for="Preço" class="form-control" />
        <span asp-validation-for="Preço" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DepartamentoId" class="control-label"></label>
        <select asp-for="DepartamentoId" class="form-control" asp-items="ViewBag.DepartamentoId"></select>
        <span asp-validation-for="DepartamentoId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Criar" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-primary">Voltar</a>
    </div>
</form>
</div>
